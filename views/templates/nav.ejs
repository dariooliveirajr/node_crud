<script>
    $(document).ready(function() {
        $('.navbar-nav > li > a[href="'+pag+'"]').parent().addClass('active');
        
        icon = $('.fa-pen');
        icon.css({"font-size":"0px"});
        
        $('.nav-item').mouseover(function(){
            id = this.id;
            icon = $('#'+id+' .fa-pen');
            icon.css({
                "cursor":"pointer",
                "font-size":"10px",
                "margin-right":"-3px",
                "margin-left":"3px",
                transition:"all 0.3s ease",
                color:"#fff",
                "-webkit-transform": "scale(1.3)",
                "-ms-transform": "scale(1.3)",
                "transform": "scale(1.3)"});
            
            $(icon).click(function(){
                if(id == 'u'){
                    window.location.href = "cadastrar";
                }else if(id == 'p'){
                    window.location.href = "cadastroProduto";
                }else{
                    window.location.href = "cadastroFuncionario";
                }
                
            })
        }).mouseleave(function(){
            icon.css({
                "font-size":"0px",
                transition:"all 0.3s ease",
                "-webkit-transform": "scale(1.3)",
                "-ms-transform": "scale(1.3)",
                "transform": "scale(1.3)"});
        });
        
    })
</script>
