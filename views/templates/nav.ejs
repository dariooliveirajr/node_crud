            <li class="nav-item" id="p">
                <i class="fas fa-pen"></i><a class="nav-link d-inline-block" href="listar_produto">Produtos</a>
            </li>
            <li class="nav-item" id="f">
                <i class="fas fa-pen"></i><a class="nav-link d-inline-block" href="listar_funcionario">Funcionários</a>
            </li>
        </ul>			
